<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

	<!-- Agregátor entit -->
	<bean id="listener" class="org.myftp.gattserver.grass3.model.EntityListener"
		factory-method="getInstance" activation="eager">
		<property name="services" ref="services" />
	</bean>

	<!-- List s odchytnutými entitami -->
	<reference-list id="services"
		interface="org.myftp.gattserver.grass3.model.DBUnitService"
		availability="optional">  <!-- activation="lazy" -->
		<reference-listener bind-method="bind"
			unbind-method="unbind" ref="listener" />
	</reference-list>

</blueprint>
