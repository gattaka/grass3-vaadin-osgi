<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">

	<display-name>Vaadin Web Application</display-name>

	<!-- To make web application aware of the Spring context loader -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
		classpath:spring/app-context.xml
<!-- 		classpath:spring/security-context.xml -->
		</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Vaadin production/development mode -->
	<context-param>
		<description>Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>

	<!-- Vaadin servlet (spring-vaadin bridge) -->
	<servlet>
		<servlet-name>Vaadin Application</servlet-name>
		<servlet-class>ru.xpoft.vaadin.SpringVaadinServlet</servlet-class>
		<init-param>
			<param-name>beanName</param-name>
			<param-value>grassUI</param-value>
		</init-param>
		<init-param>
			<description>Application widgetset</description>
			<param-name>widgetset</param-name>
			<param-value>sandbox.AppWidgetSet</param-value>
		</init-param>
	</servlet>

	<!-- Vaadin app root -->
	<servlet-mapping>
		<servlet-name>Vaadin Application</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>